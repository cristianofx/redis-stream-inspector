<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:RedisInspector.UI.ViewModels"
        x:Class="RedisInspector.UI.Views.EditConnectionWindow"
        x:DataType="vm:EditConnectionViewModel"
        Width="520" Height="480"
        Title="Connection"
        WindowStartupLocation="CenterOwner">
	<Grid RowDefinitions="*,Auto" ColumnDefinitions="*">
		<!-- Form (scrolls) -->
		<ScrollViewer Grid.Row="0" Margin="16" Padding="12" VerticalScrollBarVisibility="Auto">
			<StackPanel Spacing="8">
				<TextBlock Text="Name"/>
				<TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
						 Watermark="e.g., staging-redis" />

				<Separator/>

				<TextBlock Text="Redis URL (redis:// or rediss://)"/>
				<TextBox Text="{Binding RedisUrl, UpdateSourceTrigger=PropertyChanged}"
						 Watermark="redis://localhost:6379"/>
				<TextBlock Text="{Binding RedisUrlError}"
						   Foreground="Tomato" FontSize="12"
						   IsVisible="{Binding HasRedisUrlError}"/>

				<TextBlock Text="SSH Host (optional)" Margin="0,8,0,0"/>
				<TextBox Text="{Binding SshHost, UpdateSourceTrigger=PropertyChanged}"
						 Watermark="bastion.example.com" />

				<StackPanel Orientation="Horizontal" Spacing="8">
					<StackPanel Width="120">
						<TextBlock Text="SSH Port"/>
						<NumericUpDown Value="{Binding SshPort, Mode=TwoWay}"
											Minimum="1" Maximum="65535" />
					</StackPanel>
					<StackPanel Width="180">
						<TextBlock Text="SSH User"/>
						<TextBox Text="{Binding SshUser, UpdateSourceTrigger=PropertyChanged}"/>
					</StackPanel>
				</StackPanel>

				<TextBlock Text="SSH Password"/>
				<TextBox PasswordChar="*" Text="{Binding SshPass, UpdateSourceTrigger=PropertyChanged}"
						 Watermark="password"/>
			</StackPanel>
		</ScrollViewer>

		<!-- Button bar (never parent-disabled) -->
		<StackPanel Grid.Row="1"
					Orientation="Horizontal"
					HorizontalAlignment="Right"
					Spacing="8"
					Margin="16">
			<Button Content="Cancel"
					Command="{Binding CancelCommand}"
					IsCancel="True"
					IsEnabled="True"/>
			<!-- Let the command decide enabled/disabled; remove IsEnabled binding -->
			<Button Content="OK"
					Command="{Binding OkCommand}"
					IsDefault="True"/>
		</StackPanel>
	</Grid>
</Window>
